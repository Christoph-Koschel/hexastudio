@using HexaStudio.Shared
@using HexaStudio.Pages.Components
<Router AppAssembly="@typeof(App).Assembly">
    <Found Context="routeData">
        <PageTitle>HexaStudio | Christoph Koschel</PageTitle>
        <RouteView RouteData="@routeData" DefaultLayout="@typeof(MainLayout)"/>
        <FocusOnNavigate RouteData="@routeData" Selector="h1"/>
    </Found>
    <NotFound>
        <HeadContent>
            <style>
                .page404 {
                    height:100vh;
                    text-align:center;
                    display:flex;
                    flex-direction:column;
                    align-items:center;
                    justify-content:center;
                }

                .page404 h1 {
                    border-right:1px solid rgba(0,0,0,.3);
                    display:inline-block;
                    margin:0 20px 0 0;
                    padding-right:23px;
                    font-size:24px;
                    font-weight:500;
                    vertical-align:top;
                    line-height:49px;
                }

                .page404 > div > div {
                    display:inline-block;
                    text-align:left
                }

                .page404 h2 {
                    font-size:14px;
                    font-weight:400;
                    line-height:49px;
                    margin:0;
                }
            </style>
        </HeadContent>
        <PageTitle>Not found</PageTitle>
        <LayoutView Layout="@typeof(MainLayout)">
            <NavBar external="true" staysFixed="true"/>
            <div class="page404">
                <div>
                    <h1>404</h1>
                    <div>
                        <h2>This page could not be found.</h2>
                    </div>
                </div>
            </div>
        </LayoutView>
    </NotFound>
</Router>